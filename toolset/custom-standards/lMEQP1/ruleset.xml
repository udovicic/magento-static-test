<ruleset name="lMEQP1">
    <description>Loose Magento 1 EQP Coding Standard</description>
    <rule ref="MEQP1">
        <exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="MEQP1.PHP.PrivateClassMember.FoundPrivate"/>
        <exclude name="MEQP1.SQL.MissedIndexes.MissedIndexes"/>

    </rule>
</ruleset>
